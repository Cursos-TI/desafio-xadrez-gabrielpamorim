#include <stdio.h>

int main() {
    // Definição da quantidade de casas para cada peça se mover
    int casas_torre = 5;
    int casas_bispo = 5;
    int casas_rainha = 8;

    // Movimento da Torre
    // Move 5 casas para a direita (linha reta horizontal)

    printf("Movimento da Torre:\n");
    for (int i = 1; i <= casas_torre; i++) {
        printf("Direita\n");
    }
    printf("\n");


    // Movimento do Bispo
    // Move 5 casas na diagonal para cima e direita

    printf("Movimento do Bispo:\n");
    int contador_bispo = 1;
    while (contador_bispo <= casas_bispo) {
        printf("Cima, Direita\n");
        contador_bispo++;
    }
    printf("\n");


    // Movimento da Rainha
    // Move 8 casas para a esquerda (linha reta horizontal)
   
    printf("Movimento da Rainha:\n");
    int contador_rainha = 1;
    do {
        printf("Esquerda\n");
        contador_rainha++;
    } while (contador_rainha <= casas_rainha);

    return 0;
}
